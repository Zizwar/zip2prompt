# Server Configuration
PORT=8080
NODE_ENV=development

# MongoDB Configuration (Leave empty for local file storage)
# When ready to use MongoDB Atlas, fill in your connection string
MONGODB_URI=
# Example: mongodb+srv://username:password@cluster.mongodb.net/zip2prompt?retryWrites=true&w=majority

# Storage Mode: 'local' or 'mongodb'
STORAGE_MODE=local

# OpenRouter API Configuration
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=

# JWT Secret for Authentication
JWT_SECRET=your-secret-key-change-this-in-production

# Session Configuration
SESSION_SECRET=your-session-secret-change-this

# Default AI Model
DEFAULT_AI_MODEL=anthropic/claude-3.5-sonnet

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15
